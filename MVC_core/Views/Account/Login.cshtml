@using MVC_core.Models
@model FormData
@using (Html.BeginForm())
{
    <div style="padding:0 0;" class="loginForm">
        <form asp-controller="Account" asp-action="Login" class="form-horizontal" role="form" method="post">
            <div class="form-group" style="margin:0 0;padding-top:20px;">
                <label for="Name" class="col-sm-1 col-md-1" style="text-align:right;padding-top:5px;">账号</label>
                <div class="col-sm-11 col-md-11">
                    <input asp-for="name" name="name" type="text" class="form-control" placeholder="请输入账号" style="width:50%;" />
                    <span asp-validation-for="name"style="width:50%;"></span>
                </div>
            </div>
            <div class="form-group" style="margin:0 0;padding-top:20px;">
                <label for="Password" class="control-label col-sm-1 col-md-1">密码</label>
                <div class="col-sm-11 col-md-11">
                    <input asp-for="password" name="password" type="password" class="form-control" id="Login_password" placeholder="请输入密码" style="width:50%;" />
                    <span asp-validation-for="password" style="width:50%;"></span>
                </div>
            </div>
            <div class="form-group" style="margin:0 0;padding-top:5px;">
                <div class="col-sm-offset-1 col-sm-11 col-md-offset-1 col-md-11">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox">记住密码
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group" style="margin:0 0;padding-top:5px;">
                <lable class="control-label col-sm-1 col-md-1"></lable>
                <div class="col-sm-11 col-md-11">
                    <input name="submit" value="登录" type="submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

}